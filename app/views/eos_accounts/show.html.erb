<div class="container">
  <div class="d-flex justify-content-center row">
    <div class="col">
      <h1 class="headprm"></h1>

      <p id="notice"><%= notice %></p>

      <table class="table table-dark">
        <tr>
          <th>Email:</th>
          <td><%= @eos_account.email %></td>
        </tr>
        <tr>
          <th>Username:</th>
          <td><%= @eos_account.username.downcase %></td>
        </tr>
        <tr>
          <th>Public Key:</th>
          <td><%= @eos_account.pubkey %></td>
        </tr>
        <tr>
          <th>Private Key:</th>
          <td>
            <span id="privkey_backup_alert">IMPORTANT: LOSS OF THIS KEY WILL RESULT IN LOSS OF ACCESS TO YOUR ACCOUNT AND ANY FUNDS STORED WITHIN IT. BACKUP THIS KEY IMMEDIATELY.</span>
            <span >It is recommended that you backup the private key in several safe places, such as a digital copy in a regularly backed-up password manager, and perhaps on a carefully written document in a fireproof safe.</span>
            <span id="eos_account_privkey">placeholder</span>
          </td>
        </tr>
      </table>

    </div>
  </div>
</div>

<script>
  // Replaces the contents of the span with ID "eos_account_privkey" (which is "placeholder" by default)
  // with the user's private key, carried over from the new account form on the previous page.
  document.getElementById('eos_account_privkey').innerHTML=localStorage.getItem("privKeyStor");

