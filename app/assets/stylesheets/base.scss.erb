
$primary: #e4ca1e;

@import "bootstrap";


// Tags

a{
  color: #009765;
  transition-duration: 0.3s;
}
a:hover{
  color: #dddddd;
  text-decoration: underline;
  transition-duration: 0.3s;
}

body {
  background-image: url(<%= image_url "starry-background.jpg" %>);
  background-size: cover;
  background-repeat: no-repeat;
}

h1{
  color: $primary;
	font-family: 'Catamaran', sans-serif;
	text-align: center;
  font-size: 100px;
  font-weight: 700;
}

input {
	margin:2%;
}

label{
  color: #ffffff;
  font-family: 'Catamaran', sans-serif;
}

p{
  color: #ffffff;
  font-family: 'Catamaran', sans-serif;
  font-size: 18px;
  font-weight: 400;
  margin: 25px 0px;
  text-align: left;
  line-height: 27px;
}

span{
  color: #ffffff;
  font-family: 'Catamaran', sans-serif;
}


// Classes

.container {
  // border-right: 2px solid black;
  // border-left: 2px solid black;
  // color: #ffffff;
  background-color: rgba(21,48,64,0.8);
  background-blend-mode: lighten;
  height: 100vh;
}

.credit{
  color: #888888;
  font-size: .3rem;
}

.headprm{
	margin: 1rem 0;
	width: 100%;
}

// ID's

#error_explanation{
  background-color: #9f0000;
  padding: 10px;
  border-radius: 3px;
  p, ul > li{
    color: #ffffff;
    font-family: 'Catamaran', sans-serif;
  }
}

#btnprim {
  font-family: 'Lato', sans-serif;
  background-color: $warning;
  font-size: 24px;
	text-align:center;
  width: 25%;
  height: 10%;
  border-color: transparent;
  color: #000000;
  font-weight: 500;
  padding-top:1.5%;
  padding-bottom:1.5%;
	margin: auto;
}

#logo{
  height: 40px;
  width: 175px;
  background-image: url(<%= image_url "eos-tribe-side-by-side.svg" %>);
  background-size: contain;
  background-repeat: no-repeat;
}

#pprm {

	text-align:center;
	margin:center;
	width:100%;
	font-size:24px;
	padding-top:3%;
}

#formItems {
	text-align:center;
	margin:auto;
}
